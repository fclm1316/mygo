type FileInfoDao struct {
	IUD uint8
	*tool.Orm
}

func (td *FileInfoDao) SelectAll(page int, offset int) ([]byte, error) {
	listb := make([]po.FileInfoList, 0)

	err := td.Engine.Table("file_info").Cols(
		"file_info.id,file_info.retype,file_info.filepath,file_info.filename,file_info.status,sys_ip.ipaddr, sys_userpasswd.user,sys_userpasswd.passwd").Join(
		"LEFT", "sys_ip", "file_info.sys_ip_id = sys_ip.id").Join(
		"LEFT", "sys_userpasswd", "file_info.sys_userpasswd_id = sys_userpasswd.id").OrderBy(
		"file_info.id").Limit(page, offset).Find(&listb)
	aa, _ := json.Marshal(listb[0])
	fmt.Print(string(aa))
	if err != nil {
		return nil, err
	}

	listbyte, err := tool.SliceToByte(listb)
	if err != nil {
		return listbyte, err
	}
	// fmt.Println(listbyte)
	return listbyte, nil
}

func (td *FileInfoDao) SelectByQuery(size int, offset int, v map[string]interface{}) ([]byte, error) {

	listb := make([]model.File_info, 0)

	err := td.Engine.Table("file_info").Cols("sys_name_id,status").Where(v).Limit(size, offset).Find(&listb)
	if err != nil {
		return nil, err
	}

	listbyte, err := tool.SliceToByte(listb)
	if err != nil {
		return listbyte, err
	}

	return listbyte, nil
}

func (td *FileInfoDao) InsertUpdateDelete(FromFileInfo *model.File_info) (int64, error) {
	var resultid int64
	var err error
	session := td.NewSession()
	defer session.Close()
	if err := session.Begin(); err != nil {
		return 0, err
	}
	// 返回的条数
	if td.IUD == 1 {
		FromFileInfo.Id = 0
		resultid, err = session.Table("file_info").Insert(FromFileInfo)
	}
	if td.IUD == 2 {
		resultid, err = session.Table("file_info").ID(FromFileInfo.Id).Update(FromFileInfo)
	}
	if td.IUD == 3 {
		resultid, err = session.Table("file_info").ID(FromFileInfo.Id).Delete(FromFileInfo)
	}
	if err != nil {
		session.Rollback()
		return 0, err
	}
	err = session.Commit()
	if err != nil {
		return 0, err
	}

	return resultid, nil
}
